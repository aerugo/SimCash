{
  "version": "1.0",
  "policy_id": "test_negative_balance",
  "description": "Edge case test policy: Tests negative balance handling. Releases when effective_liquidity (balance + credit) >= remaining_amount.",
  "payment_tree": {
    "type": "condition",
    "node_id": "TEST-N1-NegativeBalance",
    "description": "Does agent have sufficient effective liquidity?",
    "condition": {
      "op": ">=",
      "left": {
        "field": "effective_liquidity"
      },
      "right": {
        "field": "remaining_amount"
      }
    },
    "on_true": {
      "type": "action",
      "node_id": "TEST-A1-NegativeBalanceRelease",
      "action": "Release"
    },
    "on_false": {
      "type": "action",
      "node_id": "TEST-A2-Hold",
      "action": "Hold",
      "parameters": {
        "reason": {
          "value": "InsufficientEffectiveLiquidity"
        }
      }
    }
  },
  "strategic_collateral_tree": {
    "type": "action",
    "node_id": "TEST-SC1-NoAction",
    "action": "HoldCollateral"
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "node_id": "TEST-EC1-NoAction",
    "action": "HoldCollateral"
  }
}
