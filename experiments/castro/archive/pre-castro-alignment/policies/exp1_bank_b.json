{
  "version": "1.0",
  "policy_id": "castro_iter11_ultratiny_liquidity_tighter_early_buffer_B",
  "description": "Iteration 11 (Bank B): Further reduce initial liquidity while tightening the early-day liquidity buffer to rely more on incoming payments and slightly less on central bank credit, preserving 100% settlement with lower combined collateral and overdraft costs.",
  "parameters": {
    "urgency_threshold": 2.0,
    "initial_liquidity_fraction": 0.00025,
    "liquidity_buffer_factor_early": 0.8,
    "liquidity_buffer_factor_late": 0.5,
    "late_window": 4.0
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "node_id": "SC1_tick_zero",
    "description": "At the start of the day, post an extremely small fraction of available collateral as initial liquidity, relying primarily on payment inflows and controlled intraday overdrafts during the day.",
    "condition": {
      "op": "==",
      "left": {
        "field": "system_tick_in_day"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "node_id": "SC2_post_initial",
      "action": "PostCollateral",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_liquidity_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialAllocation"
        }
      }
    },
    "on_false": {
      "type": "action",
      "node_id": "SC3_hold",
      "action": "HoldCollateral"
    }
  },
  "payment_tree": {
    "type": "condition",
    "node_id": "P1_check_urgent",
    "description": "If the payment is close to its deadline, release immediately; otherwise, use a time-varying liquidity buffer: more conservative far from deadline to limit overdrafts, more aggressive when the deadline is approaching.",
    "condition": {
      "op": "<=",
      "left": {
        "field": "ticks_to_deadline"
      },
      "right": {
        "param": "urgency_threshold"
      }
    },
    "on_true": {
      "type": "action",
      "node_id": "P2_release_urgent",
      "action": "Release"
    },
    "on_false": {
      "type": "condition",
      "node_id": "P3_check_late_window",
      "description": "For non-urgent payments, distinguish between those approaching their deadline (late window) and those far from it, to adjust the liquidity buffer dynamically.",
      "condition": {
        "op": "<=",
        "left": {
          "field": "ticks_to_deadline"
        },
        "right": {
          "param": "late_window"
        }
      },
      "on_true": {
        "type": "condition",
        "node_id": "P4_late_buffer_liquidity_check",
        "description": "Near-deadline but non-urgent payments: allow a more aggressive buffer so that payments do not bunch right at the urgency threshold.",
        "condition": {
          "op": ">=",
          "left": {
            "field": "effective_liquidity"
          },
          "right": {
            "compute": {
              "op": "*",
              "left": {
                "field": "remaining_amount"
              },
              "right": {
                "param": "liquidity_buffer_factor_late"
              }
            }
          }
        },
        "on_true": {
          "type": "action",
          "node_id": "P5_release_late",
          "action": "Release"
        },
        "on_false": {
          "type": "action",
          "node_id": "P6_hold_late",
          "action": "Hold"
        }
      },
      "on_false": {
        "type": "condition",
        "node_id": "P7_early_buffer_liquidity_check",
        "description": "Far from the deadline: require a higher liquidity buffer before releasing to limit costly overdrafts and encourage reliance on incoming payments.",
        "condition": {
          "op": ">=",
          "left": {
            "field": "effective_liquidity"
          },
          "right": {
            "compute": {
              "op": "*",
              "left": {
                "field": "remaining_amount"
              },
              "right": {
                "param": "liquidity_buffer_factor_early"
              }
            }
          }
        },
        "on_true": {
          "type": "action",
          "node_id": "P8_release_early",
          "action": "Release"
        },
        "on_false": {
          "type": "action",
          "node_id": "P9_hold_early",
          "action": "Hold"
        }
      }
    }
  }
}