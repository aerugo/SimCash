{
  "policy_id": "iter7_targeted_tweak_low_cost_env",
  "version": "2.0",
  "description": "Incremental refinement for low-cost, zero-penalty environment. Slightly more aggressive liquidity use and modestly higher initial collateral to balance overdraft vs (currently zero) collateral cost, while keeping simple urgent-first release logic.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 0.85,
    "initial_collateral_fraction": 0.3,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "ticks_to_deadline"
      },
      "right": {
        "compute": {
          "op": "-",
          "left": {
            "compute": {
              "op": "+",
              "left": {
                "param": "urgency_threshold"
              },
              "right": {
                "param": "eod_urgency_boost"
              }
            }
          },
          "right": {
            "field": "ticks_remaining_in_day"
          }
        }
      }
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent",
      "description": "Always release urgent payments"
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_if_liquid",
        "description": "Release when we have enough liquidity"
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_if_not_liquid",
        "description": "Otherwise hold to avoid excessive overdraft when liquidity is insufficient"
      },
      "node_id": "P3_check_liquidity",
      "description": "Release if sufficient effective liquidity vs remaining amount with buffer"
    },
    "node_id": "P1_is_urgent",
    "description": "Urgent if close to deadline, boosted near end of day"
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_noop_bank",
    "description": "No dynamic bank-level state; rely on payment and collateral rules"
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial_collateral",
      "description": "Post a fraction of max capacity as starting collateral",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_intraday",
      "description": "No further strategic collateral adjustments during the day"
    },
    "node_id": "SC1_initial_post",
    "description": "Post a bit more initial collateral at very start of day; otherwise hold collateral steady intraday"
  },
  "end_of_tick_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": ">=",
      "left": {
        "field": "ticks_remaining_in_day"
      },
      "right": {
        "value": 2
      }
    },
    "on_true": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "EC2_hold_eod_not_imminent",
      "description": "During most of the day, keep collateral as is"
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "EC3_eod_hold",
      "description": "Near end of day, also keep collateral to guarantee settlement"
    },
    "node_id": "EC1_check_excess_posted",
    "description": "If a lot of collateral is idle and queues are empty near end of day, withdraw some to reduce unnecessary posting if it ever becomes costly in other configs"
  }
}