{
  "policy_id": "iter_13_optimized",
  "version": "2.0",
  "description": "Incremental tweak from iter 12: slightly higher liquidity_buffer to reduce overdraft while keeping generous collateral; simple urgency/liquidity-based payment rule and start-of-day collateral posting.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 0.85,
    "initial_collateral_fraction": 0.3,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "compute": {
              "op": "-",
              "left": {
                "param": "urgency_threshold"
              },
              "right": {
                "value": 0.5
              }
            }
          }
        },
        {
          "op": ">=",
          "left": {
            "field": "is_eod_rush"
          },
          "right": {
            "value": 1
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent_eod"
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_liquid"
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_insufficient_liquidity"
      },
      "node_id": "P3_has_sufficient_liquidity",
      "description": "Release if effective_liquidity covers remaining_amount * liquidity_buffer, else hold."
    },
    "node_id": "P1_is_urgent_or_eod",
    "description": "Release if near deadline or in EOD rush, otherwise check liquidity vs amount*buffer."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_noop"
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialAllocation"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_collateral"
    },
    "node_id": "SC1_start_of_day_post",
    "description": "At tick 0, post a fraction of max collateral; otherwise hold collateral."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_all"
  }
}