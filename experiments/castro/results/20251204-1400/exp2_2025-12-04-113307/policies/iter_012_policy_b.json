{
  "policy_id": "iter_12_policy",
  "version": "2.0",
  "description": "Iteration 12: slight tightening of liquidity buffer to reduce overdraft cost while keeping high urgency behaviour; maintain same collateral stance.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 0.9,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "compute": {
              "op": "-",
              "left": {
                "param": "urgency_threshold"
              },
              "right": {
                "value": 1.0
              }
            }
          }
        },
        {
          "op": "==",
          "left": {
            "field": "is_past_deadline"
          },
          "right": {
            "value": 1.0
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent",
      "description": "Always release urgent or overdue payments"
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_when_liquid",
        "description": "Release when we have sufficient liquidity buffer"
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_wait_for_liquidity",
        "description": "Hold non-urgent payments until sufficient liquidity"
      },
      "node_id": "P3_check_liquidity_buffer",
      "description": "For non-urgent payments, require slightly more liquidity than amount"
    },
    "node_id": "P1_is_urgent_or_overdue",
    "description": "Release if close to deadline or overdue"
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_noop_bank_state",
    "description": "No explicit bank-level state or budget control in this iteration"
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial_fraction",
      "description": "Post a moderate initial fraction of max collateral capacity",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialAllocation"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_collateral",
      "description": "Do not adjust collateral intraday in this simple strategy"
    },
    "node_id": "SC1_initial_collateral",
    "description": "Post initial collateral at start of day, otherwise hold collateral steady"
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_eod_collateral",
    "description": "Keep collateral position unchanged at end of tick"
  }
}