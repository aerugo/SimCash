{
  "policy_id": "iter_010_policy",
  "version": "2.0",
  "description": "Slightly more liquidity-friendly policy building on iter 9; modestly lowers liquidity buffers while preserving urgency logic and collateral behavior.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 0.8,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": ">",
      "left": {
        "field": "is_eod_rush"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "condition",
      "condition": {
        "op": "or",
        "conditions": [
          {
            "op": "<=",
            "left": {
              "field": "ticks_to_deadline"
            },
            "right": {
              "compute": {
                "op": "-",
                "left": {
                  "param": "urgency_threshold"
                },
                "right": {
                  "param": "eod_urgency_boost"
                }
              }
            }
          },
          {
            "op": ">=",
            "left": {
              "field": "effective_liquidity"
            },
            "right": {
              "compute": {
                "op": "*",
                "left": {
                  "field": "remaining_amount"
                },
                "right": {
                  "param": "liquidity_buffer"
                }
              }
            }
          }
        ]
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P3_release_eod",
        "description": "Release payment during EOD rush either for urgency or sufficient liquidity"
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P4_hold_eod",
        "description": "Hold if not urgent and liquidity is insufficient even under relaxed buffer"
      },
      "node_id": "P2_eod_urgent_or_liquid",
      "description": "During EOD rush, release if urgent OR if liquidity is at least the payment amount times a reduced buffer"
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": "<=",
        "left": {
          "field": "ticks_to_deadline"
        },
        "right": {
          "param": "urgency_threshold"
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P6_release_urgent",
        "description": "Always release payments that are within urgency_threshold of deadline"
      },
      "on_false": {
        "type": "condition",
        "condition": {
          "op": ">=",
          "left": {
            "field": "effective_liquidity"
          },
          "right": {
            "compute": {
              "op": "*",
              "left": {
                "field": "remaining_amount"
              },
              "right": {
                "param": "liquidity_buffer"
              }
            }
          }
        },
        "on_true": {
          "type": "action",
          "action": "Release",
          "node_id": "P8_release_liquid",
          "description": "Release non-urgent payments when there is sufficient liquidity"
        },
        "on_false": {
          "type": "action",
          "action": "Hold",
          "node_id": "P9_hold_non_urgent_illiquid",
          "description": "Hold non-urgent payments if liquidity is below buffered requirement"
        },
        "node_id": "P7_regular_liquidity_check",
        "description": "For non-urgent payments, require effective_liquidity >= amount * liquidity_buffer"
      },
      "node_id": "P5_regular_urgent_check",
      "description": "Outside EOD rush: release if close to deadline, else check liquidity with modest buffer"
    },
    "node_id": "P1_check_eod_rush",
    "description": "Near end of day, be more willing to release to avoid any risk of non-settlement"
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_no_bank_level_action",
    "description": "No dynamic bank-level state; rely on payment and collateral rules"
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial",
      "description": "Post a fixed fraction of max collateral at tick 0",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_rest_of_day",
      "description": "No strategic collateral moves during the day"
    },
    "node_id": "SC1_start_of_day",
    "description": "Post initial collateral at start of day, otherwise hold collateral intraday"
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_eod",
    "description": "Do not adjust collateral at end of tick; rely on initial posting only"
  }
}