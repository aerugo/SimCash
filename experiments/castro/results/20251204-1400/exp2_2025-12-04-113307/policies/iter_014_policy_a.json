{
  "policy_id": "iter_14_optimized",
  "version": "2.0",
  "description": "Slightly tighter liquidity buffer, unchanged urgency and collateral to reduce overdraft/delay while keeping 100% settlement in oscillating regime.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 0.8,
    "initial_collateral_fraction": 0.28,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "compute": {
              "op": "-",
              "left": {
                "param": "urgency_threshold"
              },
              "right": {
                "value": 1.0
              }
            }
          }
        },
        {
          "op": "==",
          "left": {
            "field": "is_past_deadline"
          },
          "right": {
            "value": 1.0
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent",
      "description": "Always release urgent or overdue payments."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_liquid",
        "description": "Release when there is sufficient liquidity headroom."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_wait",
        "description": "Hold when payment is not yet urgent and liquidity is insufficient."
      },
      "node_id": "P3_check_liquidity",
      "description": "For non-urgent payments, require effective liquidity above buffered remaining amount."
    },
    "node_id": "P1_is_urgent",
    "description": "Release payments that are near deadline or past it."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_noop",
    "description": "No explicit bank-level budgeting; rely on payment-level rules."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial",
      "description": "Post initial collateral based on configured initial_collateral_fraction.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_rest_of_day",
      "description": "Do not adjust collateral intraday in this simple policy."
    },
    "node_id": "SC1_initial_post",
    "description": "Post a modest fraction of collateral at start of day; otherwise hold. Parameters reflect per-bank config."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_eod",
    "description": "No end-of-tick collateral adjustments; rely on initial posting."
  }
}