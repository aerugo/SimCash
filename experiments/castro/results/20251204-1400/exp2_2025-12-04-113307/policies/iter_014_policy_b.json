{
  "policy_id": "castro_iter13_targeted_tightening",
  "version": "2.0",
  "description": "Incremental optimization from iter 12: slightly higher liquidity buffer, standard initial collateral, urgency boosted near EOD. Aims to reduce overdraft while keeping delay, collateral, and EOD penalties at zero and maintaining 100% settlement.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 0.85,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "compute": {
              "op": "-",
              "left": {
                "param": "urgency_threshold"
              },
              "right": {
                "value": 0.0
              }
            }
          }
        },
        {
          "op": ">=",
          "left": {
            "field": "is_eod_rush"
          },
          "right": {
            "value": 1.0
          }
        },
        {
          "op": "<=",
          "left": {
            "field": "ticks_remaining_in_day"
          },
          "right": {
            "param": "eod_urgency_boost"
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent",
      "description": "Release urgent or EOD payments regardless of liquidity to maintain 100% settlement."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_if_liquid",
        "description": "Release when there is sufficient liquidity plus buffer."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_conservative",
        "description": "Hold if not urgent and liquidity (with buffer) is insufficient, to avoid overdraft costs."
      },
      "node_id": "P3_check_liquidity_with_buffer",
      "description": "For non-urgent payments, only release when effective liquidity comfortably covers remaining amount with a small buffer to reduce overdraft."
    },
    "node_id": "P1_is_urgent_or_eod",
    "description": "Urgent or near end-of-day payments always release to avoid any risk of deadline/EOD penalties."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_no_state_logic",
    "description": "No additional bank-level state logic for this iteration; rely on payment and collateral trees."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial",
      "description": "Post a standard fraction of max collateral capacity at day start to support smooth settlement without excessive collateral cost.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialDayStartCollateral"
        }
      }
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": "and",
        "conditions": [
          {
            "op": ">",
            "left": {
              "field": "queue1_liquidity_gap"
            },
            "right": {
              "value": 0.0
            }
          },
          {
            "op": ">",
            "left": {
              "field": "remaining_collateral_capacity"
            },
            "right": {
              "value": 0.0
            }
          }
        ]
      },
      "on_true": {
        "type": "action",
        "action": "PostCollateral",
        "node_id": "SC4_post_to_cover_gap",
        "description": "Post just enough collateral to cover current queue liquidity gap, capped by remaining capacity.",
        "parameters": {
          "amount": {
            "compute": {
              "op": "min",
              "values": [
                {
                  "field": "queue1_liquidity_gap"
                },
                {
                  "field": "remaining_collateral_capacity"
                }
              ]
            }
          },
          "reason": {
            "value": "CoverQueueGap"
          }
        }
      },
      "on_false": {
        "type": "action",
        "action": "HoldCollateral",
        "node_id": "SC5_hold_collateral",
        "description": "No collateral adjustment when no gap or no capacity."
      },
      "node_id": "SC3_gap_and_capacity_check",
      "description": "During the day, only post extra collateral if there is a positive queue liquidity gap and remaining capacity."
    },
    "node_id": "SC1_initial_post",
    "description": "Post moderate initial collateral at start of day; otherwise post only if there is a clear queue liquidity gap and capacity available."
  },
  "end_of_tick_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "and",
      "conditions": [
        {
          "op": ">=",
          "left": {
            "field": "ticks_remaining_in_day"
          },
          "right": {
            "value": 1.0
          }
        },
        {
          "op": "==",
          "left": {
            "field": "outgoing_queue_size"
          },
          "right": {
            "value": 0.0
          }
        },
        {
          "op": ">",
          "left": {
            "field": "posted_collateral"
          },
          "right": {
            "value": 0.0
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "WithdrawCollateral",
      "node_id": "EC2_withdraw_all_when_idle",
      "description": "Withdraw all posted collateral when no payments are queued and day is effectively done.",
      "parameters": {
        "amount": {
          "field": "posted_collateral"
        },
        "reason": {
          "value": "EndOfDayUnwind"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "EC3_hold_collateral_eod",
      "description": "Otherwise, hold collateral position."
    },
    "node_id": "EC1_eod_unwind_check",
    "description": "Near end of day, withdraw any excess collateral if queues are empty to reduce needless collateral and overdraft interaction."
  }
}