{
  "policy_id": "iter_013_targeted_tweak",
  "version": "2.0",
  "description": "Incremental tweak from iteration 12: slightly higher liquidity_buffer for both banks to reduce overdraft while keeping early releases and same collateral stance. Symmetric structure so a single policy applies to both banks.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 0.9,
    "initial_collateral_fraction": 0.2,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "compute": {
              "op": "-",
              "left": {
                "param": "urgency_threshold"
              },
              "right": {
                "value": 0.5
              }
            }
          }
        },
        {
          "op": "==",
          "left": {
            "field": "is_eod_rush"
          },
          "right": {
            "value": 1.0
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent"
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_with_buffer"
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_if_not_enough_liquidity"
      },
      "node_id": "P3_check_liquidity",
      "description": "For non-urgent payments, require a modest liquidity buffer to limit overdrafts while still releasing early in the day."
    },
    "node_id": "P1_is_urgent",
    "description": "Urgent or EOD-rush payments release regardless of liquidity to avoid any chance of non-settlement or deadline risk."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_noop_bank",
    "description": "No dynamic bank-level state or release budgets for this simple scenario."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial_fraction",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialDayAllocation"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_rest_of_day"
    },
    "node_id": "SC1_initial_post",
    "description": "Post a fixed fraction of max collateral capacity at the very start of the day; otherwise hold collateral steady intraday."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_eod",
    "description": "Do nothing at end of each tick; rely solely on the strategic (start-of-day) decision."
  }
}