{
  "policy_id": "iter_007_targeted_overdraft_reduction",
  "version": "2.0",
  "description": "Iteration 7: Small liquidity_buffer increase to reduce overdraft cost while keeping simple urgency-based release. Symmetric for both banks.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.05,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "param": "urgency_threshold"
          }
        },
        {
          "op": "==",
          "left": {
            "field": "is_eod_rush"
          },
          "right": {
            "value": 1.0
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent_or_eod",
      "description": "Always release urgent or EOD-rush payments to avoid any risk of non\u2011settlement."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_with_buffer",
        "description": "Release when we have sufficient liquidity relative to payment size."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_to_avoid_overdraft",
        "description": "Hold non\u2011urgent payment if liquidity is tight to limit overdraft costs."
      },
      "node_id": "P3_check_liquidity_buffer",
      "description": "For non\u2011urgent payments, only release if effective liquidity comfortably covers remaining amount."
    },
    "node_id": "P1_is_urgent_or_eod",
    "description": "Release when close to deadline or during EOD rush, otherwise check liquidity buffer to avoid overdraft."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_no_special_bank_state",
    "description": "No dynamic bank-level state or release budget management in this simple policy."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial_fraction",
      "description": "Initial collateral posting at tick 0.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialDayCollateral"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_collateral_midday",
      "description": "Do not adjust collateral intraday for this simple scenario."
    },
    "node_id": "SC1_post_initial_at_start",
    "description": "Post a fixed fraction of maximum collateral capacity only at the start of the day."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_collateral_eod",
    "description": "No end-of-tick collateral rebalancing needed in this simple setup."
  }
}