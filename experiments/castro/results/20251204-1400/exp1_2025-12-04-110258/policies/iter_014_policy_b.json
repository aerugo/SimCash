{
  "policy_id": "iter_014_targeted_tweak",
  "version": "2.0",
  "description": "Iteration 14 policy: slightly tighter liquidity buffer for A, reverted higher buffer for B to reduce overdraft while keeping zero delays in short 2\u2011tick day.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.0,
    "initial_collateral_fraction": 0.2,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "compute": {
              "op": "+",
              "left": {
                "param": "urgency_threshold"
              },
              "right": {
                "param": "eod_urgency_boost"
              }
            }
          }
        },
        {
          "op": ">=",
          "left": {
            "field": "day_progress_fraction"
          },
          "right": {
            "value": 0.9
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent"
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_liquid"
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_wait_for_liquidity"
      },
      "node_id": "P3_check_liquidity",
      "description": "For non-urgent payments, require effective_liquidity to cover amount times liquidity_buffer to avoid overdraft spikes."
    },
    "node_id": "P1_is_urgent",
    "description": "Urgent or EOD-rush payments release regardless of liquidity to avoid any deadline/EOD risk."
  }
}