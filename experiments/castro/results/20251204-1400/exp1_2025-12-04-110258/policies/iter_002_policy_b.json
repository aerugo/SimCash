{
  "policy_id": "bank_b_fixed_policy",
  "version": "2.0",
  "description": "Corrected policy for Bank B with defined parameters and valid references.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.0,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "ticks_to_deadline"
      },
      "right": {
        "compute": {
          "op": "-",
          "left": {
            "compute": {
              "op": "max",
              "values": [
                {
                  "param": "urgency_threshold"
                },
                {
                  "compute": {
                    "op": "-",
                    "left": {
                      "param": "urgency_threshold"
                    },
                    "right": {
                      "param": "eod_urgency_boost"
                    }
                  }
                }
              ]
            }
          },
          "right": {
            "compute": {
              "op": "*",
              "left": {
                "param": "eod_urgency_boost"
              },
              "right": {
                "field": "is_eod_rush"
              }
            }
          }
        }
      }
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent"
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_liquid"
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_insufficient_liquidity"
      },
      "node_id": "P3_check_liquidity",
      "description": "Release if we have effective liquidity above buffered remaining amount."
    },
    "node_id": "P1_is_urgent",
    "description": "Urgent payments always released to avoid deadline penalties, with extra urgency near end of day."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_no_dynamic_budget"
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialDayAllocation"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_rest_of_day"
    },
    "node_id": "SC1_initial_post",
    "description": "Post initial collateral at very start of day; otherwise hold."
  },
  "end_of_tick_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": ">",
      "left": {
        "field": "queue1_liquidity_gap"
      },
      "right": {
        "value": 0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "EC2_post_extra_if_gap",
      "parameters": {
        "amount": {
          "compute": {
            "op": "min",
            "values": [
              {
                "field": "remaining_collateral_capacity"
              },
              {
                "compute": {
                  "op": "max",
                  "values": [
                    {
                      "value": 0
                    },
                    {
                      "field": "queue1_liquidity_gap"
                    }
                  ]
                }
              }
            ]
          }
        },
        "reason": {
          "value": "CoverLiquidityGap"
        }
      }
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">",
        "left": {
          "field": "posted_collateral"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "value": 0.8
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "WithdrawCollateral",
        "node_id": "EC4_withdraw_excess",
        "parameters": {
          "amount": {
            "compute": {
              "op": "*",
              "left": {
                "field": "posted_collateral"
              },
              "right": {
                "value": 0.1
              }
            }
          },
          "reason": {
            "value": "FreeExcessCollateral"
          }
        }
      },
      "on_false": {
        "type": "action",
        "action": "HoldCollateral",
        "node_id": "EC5_hold_collateral"
      },
      "node_id": "EC3_check_excess_collateral",
      "description": "If no gap but much more posted than currently needed and close to max capacity, withdraw some collateral."
    },
    "node_id": "EC1_handle_excess_or_need",
    "description": "At end of tick, if there is positive liquidity gap, try to post more collateral; if large idle collateral capacity, withdraw some."
  }
}