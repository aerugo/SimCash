{
  "policy_id": "iter_15_optimized",
  "version": "2.0",
  "description": "Slightly more aggressive liquidity use to reduce overdraft-driven costs while maintaining 100% settlement. Symmetric for both banks.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 0.95,
    "initial_collateral_fraction": 0.18,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "param": "urgency_threshold"
          }
        },
        {
          "op": "==",
          "left": {
            "field": "is_past_deadline"
          },
          "right": {
            "value": 1
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent_overdue"
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_with_buffer"
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_wait_for_liquidity"
      },
      "node_id": "P3_check_liquidity_buffer",
      "description": "Release if effective liquidity covers amount times buffer; else hold."
    },
    "node_id": "P1_is_urgent_or_overdue",
    "description": "Release if payment is urgent/overdue; otherwise check liquidity buffer."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_no_bank_level_adjustment"
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialAllocation"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_rest_of_day"
    },
    "node_id": "SC1_initial_post",
    "description": "Post a modest amount of collateral at start of day, otherwise hold."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_all_collateral"
  }
}