{
  "policy_id": "iter_003_incremental_overdraft_control",
  "version": "2.0",
  "description": "Iteration 3: Maintain 100% settlement while reducing expected overdraft by tightening release when liquidity is insufficient and improving collateral deployment.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.15,
    "initial_collateral_fraction": 0.15,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "param": "urgency_threshold"
          }
        },
        {
          "op": "<=",
          "left": {
            "field": "ticks_remaining_in_day"
          },
          "right": {
            "compute": {
              "op": "-",
              "left": {
                "param": "urgency_threshold"
              },
              "right": {
                "param": "eod_urgency_boost"
              }
            }
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent_eod",
      "description": "Release urgent/EOD payments regardless of liquidity to avoid deadline/EOD risks."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_if_liquid",
        "description": "Release when we have enough buffered liquidity to reduce overdraft risk."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_to_avoid_overdraft",
        "description": "Hold non-urgent, underfunded payments to limit overdraft."
      },
      "node_id": "P3_check_liquidity_with_buffer",
      "description": "For non-urgent payments, only release when effective liquidity comfortably covers remaining amount."
    },
    "node_id": "P1_is_urgent_or_eod",
    "description": "Always release urgent or near-EOD payments to preserve 100% settlement."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_no_bank_level_state",
    "description": "No explicit bank-level state management in this simple scenario."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial_fraction",
      "description": "Post initial collateral based on configured fraction of capacity.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialDayCollateral"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_collateral_midday",
      "description": "No strategic intraday collateral moves beyond initial post."
    },
    "node_id": "SC1_start_of_day_initial_post",
    "description": "Post a modest fraction of collateral at the very start of the day."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_eod_collateral",
    "description": "Keep collateral position stable at end of tick; current runs show no collateral cost pressure."
  }
}