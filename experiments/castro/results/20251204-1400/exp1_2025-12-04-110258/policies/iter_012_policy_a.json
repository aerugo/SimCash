{
  "policy_id": "iter_012_policy",
  "version": "2.0",
  "description": "Iteration 12: slight reduction of liquidity_buffer for both banks to lower overdraft/collateral cost while keeping simple urgent-first release logic and modest initial collateral.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 0.85,
    "initial_collateral_fraction": 0.2,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "ticks_to_deadline"
      },
      "right": {
        "compute": {
          "op": "-",
          "left": {
            "param": "urgency_threshold"
          },
          "right": {
            "compute": {
              "op": "*",
              "left": {
                "param": "eod_urgency_boost"
              },
              "right": {
                "field": "is_eod_rush"
              }
            }
          }
        }
      }
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent"
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_liquid"
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_wait"
      },
      "node_id": "P3_has_liquidity",
      "description": "If not urgent, only release when effective_liquidity exceeds remaining_amount times liquidity_buffer."
    },
    "node_id": "P1_is_urgent",
    "description": "Release if payment is urgent considering base and EOD-boosted urgency thresholds."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_noop"
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialDayCollateral"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_collateral"
    },
    "node_id": "SC1_initial_post",
    "description": "Post a fixed fraction of max collateral at start of day; otherwise hold collateral decisions intraday."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_eod",
    "description": "Keep collateral unchanged at end of each tick to avoid churn costs."
  }
}