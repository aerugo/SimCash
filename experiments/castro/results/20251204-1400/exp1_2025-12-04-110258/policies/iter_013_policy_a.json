{
  "policy_id": "iter_013_optimized",
  "version": "2.0",
  "description": "Slightly more conservative liquidity buffer, same collateral; aim to reduce overdraft while keeping zero delay and full settlement.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 0.95,
    "initial_collateral_fraction": 0.2,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "param": "urgency_threshold"
          }
        },
        {
          "op": "==",
          "left": {
            "field": "is_eod_rush"
          },
          "right": {
            "value": 1.0
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent_or_eod",
      "description": "Always release urgent or EOD-rush payments to avoid deadline or EOD penalties."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_liquid",
        "description": "Liquidity is sufficient with buffer, release payment."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_wait_for_liquidity",
        "description": "Hold non-urgent payment until more liquidity or urgency increases."
      },
      "node_id": "P3_check_effective_liquidity",
      "description": "For non-urgent payments, release only if effective_liquidity covers remaining_amount times buffer."
    },
    "node_id": "P1_is_urgent_or_eod",
    "description": "Release if close to deadline or in end-of-day rush, otherwise check liquidity vs amount with buffer."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial_fraction",
      "description": "Post initial collateral based on configured fraction of capacity.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialAllocation"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_intraday",
      "description": "Do not adjust collateral strategically during the day."
    },
    "node_id": "SC1_initial_post",
    "description": "Post fixed fraction of max collateral at start of day, otherwise hold collateral decisions intraday."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_all_eod",
    "description": "Keep collateral unchanged at end of each tick; current scenario shows no collateral cost issues."
  }
}