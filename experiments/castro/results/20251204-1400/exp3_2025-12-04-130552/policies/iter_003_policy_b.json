{
  "policy_id": "iter_003_incremental",
  "version": "2.0",
  "description": "Iteration 3 policy: keep zero-cost behavior while simplifying collateral use and maintaining strong liquidity discipline.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.1,
    "initial_collateral_fraction": 0.1,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "ticks_to_deadline"
      },
      "right": {
        "compute": {
          "op": "+",
          "left": {
            "param": "urgency_threshold"
          },
          "right": {
            "compute": {
              "op": "*",
              "left": {
                "param": "eod_urgency_boost"
              },
              "right": {
                "field": "is_eod_rush"
              }
            }
          }
        }
      }
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent_or_eod",
      "description": "Always release urgent or EOD-rush payments to avoid deadline and EOD penalties."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_with_buffer",
        "description": "Release when effective liquidity comfortably covers remaining amount."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_low_liquidity",
        "description": "Hold when liquidity is tight to avoid overdraft and unnecessary collateral usage."
      },
      "node_id": "P3_has_sufficient_liquidity",
      "description": "For non-urgent payments, require buffered liquidity before releasing."
    },
    "node_id": "P1_is_urgent_or_eod",
    "description": "Release if close to deadline or during end-of-day rush, otherwise check liquidity."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_no_bank_level_adjustments",
    "description": "Keep bank-level behavior simple; rely on payment and collateral trees."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial_fraction",
      "description": "Post a small fraction of max capacity as initial collateral.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialAllocation"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_collateral_midday",
      "description": "Avoid dynamic collateral changes during the day given zero-cost regime."
    },
    "node_id": "SC1_initial_post",
    "description": "Post modest initial collateral only at start of day, otherwise hold collateral decisions."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_end_of_tick",
    "description": "Do not adjust collateral at end of tick under current zero-cost configuration."
  }
}