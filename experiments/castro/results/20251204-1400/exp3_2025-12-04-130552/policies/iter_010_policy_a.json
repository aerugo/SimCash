{
  "policy_id": "iter_010_policy",
  "version": "2.0",
  "description": "Incremental tweak from iteration 9: slightly lower liquidity_buffer to 1.06 for both banks to reduce unnecessary holding while maintaining strong liquidity discipline. Collateral behavior kept simple (initial posting only).",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.06,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "compute": {
              "op": "-",
              "left": {
                "param": "urgency_threshold"
              },
              "right": {
                "param": "eod_urgency_boost"
              }
            }
          }
        },
        {
          "op": ">",
          "left": {
            "field": "is_eod_rush"
          },
          "right": {
            "value": 0
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent_eod",
      "description": "Always release urgent or EOD-rush payments to avoid deadline or EOD penalties."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_liquid",
        "description": "Release when we comfortably meet buffered liquidity requirement."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_conserve_liquidity",
        "description": "Hold non-urgent, non-EOD payments when liquidity is tight."
      },
      "node_id": "P3_check_liquidity_with_buffer",
      "description": "If sufficient effective liquidity with modest buffer, release; otherwise hold."
    },
    "node_id": "P1_is_urgent_or_eod",
    "description": "Release if near deadline or during end-of-day rush, otherwise check liquidity vs remaining amount with buffer."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_noop_bank",
    "description": "No dynamic bank-level state logic for this simple scenario."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial",
      "description": "Post a fixed fraction of maximum collateral capacity at day start.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialAllocation"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_rest_of_day",
      "description": "After initial posting, keep collateral constant to avoid churn costs."
    },
    "node_id": "SC1_initial_collateral",
    "description": "Post initial collateral at very start of day, then hold collateral thereafter."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_eod",
    "description": "Do not adjust collateral at end of tick; rely on strategic tree only."
  }
}