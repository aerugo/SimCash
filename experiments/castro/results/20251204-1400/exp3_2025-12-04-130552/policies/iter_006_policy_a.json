{
  "policy_id": "iter_006_incremental_tighten_liquidity",
  "version": "2.0",
  "description": "Incrementally tighter liquidity buffer for both banks while keeping same structure; maintains 100% settlement with small cost-reducing adjustment.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.08,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "ticks_to_deadline"
      },
      "right": {
        "compute": {
          "op": "-",
          "left": {
            "compute": {
              "op": "+",
              "left": {
                "param": "urgency_threshold"
              },
              "right": {
                "param": "eod_urgency_boost"
              }
            }
          },
          "right": {
            "field": "day_progress_fraction"
          }
        }
      }
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent_or_eod",
      "description": "Always release when urgent or near end of day to avoid deadline and EOD penalties."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_with_buffer",
        "description": "Release when we have enough liquidity plus buffer."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_insufficient_liquidity",
        "description": "Hold when liquidity is tight to limit overdraft and collateral usage."
      },
      "node_id": "P3_check_liquidity_buffer",
      "description": "If sufficient effective liquidity relative to payment size (with small buffer), release; otherwise hold."
    },
    "node_id": "P1_urgent_or_eod",
    "description": "Release if close to deadline or during EOD rush, otherwise check liquidity buffer."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_no_bank_level_adjustment",
    "description": "Keep bank-level controls neutral; rely on payment and collateral trees."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial_fraction",
      "description": "Post a fixed fraction of max capacity as starting collateral.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        }
      }
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">",
        "left": {
          "field": "queue1_liquidity_gap"
        },
        "right": {
          "value": 0.0
        }
      },
      "on_true": {
        "type": "action",
        "action": "PostCollateral",
        "node_id": "SC4_post_to_cover_gap_limited_by_capacity",
        "description": "Post additional collateral up to remaining capacity, scaled to the observed queue gap.",
        "parameters": {
          "amount": {
            "compute": {
              "op": "min",
              "values": [
                {
                  "field": "remaining_collateral_capacity"
                },
                {
                  "compute": {
                    "op": "max",
                    "values": [
                      {
                        "value": 0.0
                      },
                      {
                        "field": "queue1_liquidity_gap"
                      }
                    ]
                  }
                }
              ]
            }
          }
        }
      },
      "on_false": {
        "type": "action",
        "action": "HoldCollateral",
        "node_id": "SC5_hold_when_no_gap",
        "description": "Do nothing with collateral when there is no queue liquidity gap."
      },
      "node_id": "SC3_gap_based_topup",
      "description": "If there is a positive liquidity gap in the queue, try to top up collateral, otherwise hold."
    },
    "node_id": "SC1_start_of_day_initial_post",
    "description": "Post initial collateral at start of day."
  },
  "end_of_tick_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "and",
      "conditions": [
        {
          "op": "<",
          "left": {
            "field": "day_progress_fraction"
          },
          "right": {
            "value": 0.8
          }
        },
        {
          "op": "==",
          "left": {
            "field": "queue1_total_value"
          },
          "right": {
            "value": 0.0
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "WithdrawCollateral",
      "node_id": "EC2_withdraw_some_collateral",
      "description": "Withdraw a portion of posted collateral when system is quiet to reduce collateral costs.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "posted_collateral"
            },
            "right": {
              "value": 0.5
            }
          }
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "EC3_hold_collateral_default",
      "description": "Default to holding collateral near EOD or when queues are active."
    },
    "node_id": "EC1_check_unused_collateral",
    "description": "At end of tick, withdraw excess collateral if far from EOD and queues are light; otherwise hold."
  }
}