{
  "policy_id": "bank_b_fixed_policy",
  "version": "2.0",
  "description": "Fixed policy for Bank B with correctly defined parameters and valid JSON structure. Prioritizes urgent payments and maintains liquidity buffer; includes simple collateral strategy.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.0,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "param": "urgency_threshold"
          }
        },
        {
          "op": "==",
          "left": {
            "field": "is_past_deadline"
          },
          "right": {
            "value": 1
          }
        },
        {
          "op": "and",
          "conditions": [
            {
              "op": "<=",
              "left": {
                "field": "ticks_remaining_in_day"
              },
              "right": {
                "param": "eod_urgency_boost"
              }
            },
            {
              "op": "<=",
              "left": {
                "field": "ticks_to_deadline"
              },
              "right": {
                "compute": {
                  "op": "+",
                  "left": {
                    "param": "urgency_threshold"
                  },
                  "right": {
                    "param": "eod_urgency_boost"
                  }
                }
              }
            }
          ]
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent",
      "description": "Always release urgent or overdue payments."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_liquid",
        "description": "Release when liquidity buffer is satisfied."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_insufficient_liquidity",
        "description": "Hold when liquidity is tight and payment is not yet urgent."
      },
      "node_id": "P3_check_liquidity",
      "description": "Release if we have sufficient effective liquidity vs. remaining amount, otherwise hold."
    },
    "node_id": "P1_urgent_or_eod",
    "description": "Treat payments as urgent close to deadline or near end-of-day."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_noop",
    "description": "No additional bank-level state or release budget logic for now, as performance is already optimal."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial",
      "description": "Post a fraction of max capacity as initial collateral.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialDayStartCollateral"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_rest_of_day",
      "description": "By default do nothing with collateral intraday."
    },
    "node_id": "SC1_initial_post",
    "description": "Post initial collateral at the very start of the day, otherwise hold."
  },
  "end_of_tick_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "ticks_remaining_in_day"
      },
      "right": {
        "value": 1
      }
    },
    "on_true": {
      "type": "condition",
      "condition": {
        "op": ">",
        "left": {
          "field": "posted_collateral"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "value": 0.1
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "WithdrawCollateral",
        "node_id": "EC3_withdraw_some",
        "description": "Withdraw some collateral when clearly over-posted near EOD.",
        "parameters": {
          "amount": {
            "compute": {
              "op": "*",
              "left": {
                "field": "posted_collateral"
              },
              "right": {
                "value": 0.2
              }
            }
          },
          "reason": {
            "value": "EOD_ExcessCollateral"
          }
        }
      },
      "on_false": {
        "type": "action",
        "action": "HoldCollateral",
        "node_id": "EC4_hold_eod",
        "description": "Keep collateral if not clearly excessive."
      },
      "node_id": "EC2_if_excess_collateral",
      "description": "If there is remaining capacity and low queue gap, withdraw some collateral; else hold."
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "EC5_hold_intraday",
      "description": "Intraday, do not adjust collateral at tick boundaries."
    },
    "node_id": "EC1_eod_check",
    "description": "At end of day, decide whether to keep or withdraw excess collateral."
  }
}