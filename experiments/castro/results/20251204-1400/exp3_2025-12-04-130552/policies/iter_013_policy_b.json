{
  "policy_id": "iter_012_targeted_tweak",
  "version": "2.0",
  "description": "Incremental tweak from iter 11: slightly tighter liquidity buffer, conservative collateral usage, preserve 100% settlement.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.05,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "param": "urgency_threshold"
          }
        },
        {
          "op": "==",
          "left": {
            "field": "is_eod_rush"
          },
          "right": {
            "value": 1.0
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent_eod"
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_liquid"
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_insufficient_liquidity"
      },
      "node_id": "P3_check_liquidity_buffer",
      "description": "Release if effective liquidity comfortably covers remaining amount, else hold to avoid overdraft and collateral costs."
    },
    "node_id": "P1_is_urgent_or_eod_rush",
    "description": "Release if near deadline or in end-of-day rush, otherwise check liquidity buffer."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_no_state_logic"
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial_fraction",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          },
          "reason": {
            "value": "InitialDayStart"
          }
        }
      }
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">",
        "left": {
          "field": "queue1_liquidity_gap"
        },
        "right": {
          "value": 0.0
        }
      },
      "on_true": {
        "type": "condition",
        "condition": {
          "op": ">",
          "left": {
            "field": "remaining_collateral_capacity"
          },
          "right": {
            "value": 0.0
          }
        },
        "on_true": {
          "type": "action",
          "action": "PostCollateral",
          "node_id": "SC5_post_min_for_gap",
          "parameters": {
            "amount": {
              "compute": {
                "op": "min",
                "values": [
                  {
                    "field": "queue1_liquidity_gap"
                  },
                  {
                    "field": "remaining_collateral_capacity"
                  }
                ]
              }
            },
            "reason": {
              "value": "CoverLiquidityGap"
            }
          }
        },
        "on_false": {
          "type": "action",
          "action": "HoldCollateral",
          "node_id": "SC6_hold_no_capacity"
        },
        "node_id": "SC4_check_remaining_capacity"
      },
      "on_false": {
        "type": "action",
        "action": "HoldCollateral",
        "node_id": "SC7_hold_no_gap"
      },
      "node_id": "SC3_post_if_gap",
      "description": "During the day, add collateral only if there is a positive liquidity gap and capacity remaining."
    },
    "node_id": "SC1_initial_post",
    "description": "Post modest initial collateral only at tick 0 if there is capacity."
  },
  "end_of_tick_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "and",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "outgoing_queue_size"
          },
          "right": {
            "value": 1.0
          }
        },
        {
          "op": "<=",
          "left": {
            "field": "queue1_total_value"
          },
          "right": {
            "value": 0.0
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "WithdrawCollateral",
      "node_id": "EC2_withdraw_some_collateral",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "posted_collateral"
            },
            "right": {
              "value": 0.5
            }
          }
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "EC3_hold_collateral"
    },
    "node_id": "EC1_check_excess_posted",
    "description": "At end of tick, withdraw excess collateral if queues are small and plenty of capacity unused."
  }
}