{
  "policy_id": "iter14_optimized",
  "version": "2.0",
  "description": "Iteration 14 policy: small liquidity_buffer tweaks vs iter13 to reduce cost while maintaining 100% settlement.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 0.97,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "param": "urgency_threshold"
          }
        },
        {
          "op": "and",
          "conditions": [
            {
              "op": "==",
              "left": {
                "field": "is_eod_rush"
              },
              "right": {
                "value": 1.0
              }
            },
            {
              "op": "<=",
              "left": {
                "field": "ticks_to_deadline"
              },
              "right": {
                "compute": {
                  "op": "+",
                  "left": {
                    "param": "urgency_threshold"
                  },
                  "right": {
                    "param": "eod_urgency_boost"
                  }
                }
              }
            }
          ]
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent_eod",
      "description": "Immediate release for urgent or EOD-rush payments."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_liquid",
        "description": "Release when liquidity buffer is satisfied."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_wait_for_liquidity",
        "description": "Hold to avoid overdraft and unnecessary collateral usage."
      },
      "node_id": "P3_check_liquidity_buffer",
      "description": "For non-urgent payments, require effective_liquidity >= remaining_amount * liquidity_buffer."
    },
    "node_id": "P1_is_urgent_or_eod",
    "description": "Release if payment is urgent or we are close to end-of-day, otherwise apply liquidity check."
  }
}