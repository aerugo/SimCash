{
  "policy_id": "iter_015_targeted_tweak",
  "version": "2.0",
  "description": "Iteration 15: small liquidity_buffer reduction for both banks; otherwise keep simple urgent-or-liquid release and modest initial collateral.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 0.95,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "compute": {
              "op": "+",
              "left": {
                "param": "urgency_threshold"
              },
              "right": {
                "param": "eod_urgency_boost"
              }
            }
          }
        },
        {
          "op": "==",
          "left": {
            "field": "is_past_deadline"
          },
          "right": {
            "value": 1.0
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent"
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_with_buffer"
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_insufficient_liquidity"
      },
      "node_id": "P3_check_liquidity_buffer",
      "description": "For non-urgent payments, require effective_liquidity to cover amount times liquidity_buffer."
    },
    "node_id": "P1_is_urgent_or_overdue",
    "description": "Always release if urgent or past deadline to maintain 100% settlement."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_noop",
    "description": "No explicit intraday bank-level state adjustments; rely on payment and collateral trees."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial_collateral",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_intraday"
    },
    "node_id": "SC1_start_of_day",
    "description": "Post a fixed fraction of max collateral at tick 0, otherwise hold collateral steady intraday."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_eod",
    "description": "Do nothing special at end of tick; avoid unnecessary collateral changes."
  }
}