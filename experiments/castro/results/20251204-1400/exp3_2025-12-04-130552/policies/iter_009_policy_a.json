{
  "policy_id": "iteration_9_optimized_small_step",
  "version": "2.0",
  "description": "Incremental tweak from iter 8: slightly higher liquidity buffer to curb overdraft while preserving 100% settlement. Symmetric simple trees; no behavioral change besides parameter.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.08,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "ticks_to_deadline"
      },
      "right": {
        "compute": {
          "op": "-",
          "left": {
            "param": "urgency_threshold"
          },
          "right": {
            "value": 0.0
          }
        }
      }
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent",
      "description": "Always release urgent payments to avoid deadline/EOD penalties (none currently but protects settlement)."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_when_liquid",
        "description": "Release when there is enough liquidity with buffer."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_when_tight",
        "description": "Hold when liquidity is tight to avoid overdraft."
      },
      "node_id": "P3_check_liquidity_buffer",
      "description": "For non-urgent payments, require effective_liquidity >= remaining_amount * liquidity_buffer."
    },
    "node_id": "P1_is_urgent_or_eod",
    "description": "Release if near deadline or end-of-day rush; otherwise check liquidity."
  }
}