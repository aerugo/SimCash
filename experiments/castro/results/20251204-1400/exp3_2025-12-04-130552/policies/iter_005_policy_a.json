{
  "policy_id": "iter_005_targeted_tweak",
  "version": "2.0",
  "description": "Incremental improvement: reintroduce mild liquidity buffer while keeping simple urgency-based release. No collateral trees used given zero cost components so far.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.05,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "param": "urgency_threshold"
          }
        },
        {
          "op": "==",
          "left": {
            "field": "is_past_deadline"
          },
          "right": {
            "value": 1.0
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent_or_overdue",
      "description": "Do not risk deadline penalties."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_with_buffer",
        "description": "Release when we have a modest liquidity cushion."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_to_avoid_overdraft",
        "description": "Hold non-urgent payment when liquidity is tight to limit overdraft cost."
      },
      "node_id": "P3_check_liquidity_buffer",
      "description": "For non-urgent payments, require effective_liquidity >= remaining_amount * liquidity_buffer."
    },
    "node_id": "P1_is_urgent_or_overdue",
    "description": "Always release if near deadline or overdue; otherwise require modest liquidity buffer."
  }
}