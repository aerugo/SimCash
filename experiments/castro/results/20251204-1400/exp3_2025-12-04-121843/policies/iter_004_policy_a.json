{
  "policy_id": "bank_a_fixed_policy",
  "version": "2.0",
  "description": "Validated JSON policy for Bank A with simple, robust behavior. Prioritizes urgent payments while keeping liquidity usage conservative and collateral stable.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.0,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "ticks_to_deadline"
      },
      "right": {
        "compute": {
          "op": "+",
          "left": {
            "param": "urgency_threshold"
          },
          "right": {
            "compute": {
              "op": "*",
              "left": {
                "param": "eod_urgency_boost"
              },
              "right": {
                "field": "is_eod_rush"
              }
            }
          }
        }
      }
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent",
      "description": "Always release urgent or EOD-rush payments to avoid penalties."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_if_liquid",
        "description": "Release when there is sufficient liquidity."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_if_tight",
        "description": "Hold when liquidity is tight and payment is not yet urgent."
      },
      "node_id": "P3_check_liquidity",
      "description": "Only release if effective_liquidity comfortably covers the remaining amount."
    },
    "node_id": "P1_is_urgent_or_eod",
    "description": "Treat payments as urgent when close to deadline or during end-of-day rush."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_no_bank_level_changes",
    "description": "Keep bank-level settings unchanged; payment_tree handles behavior."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial",
      "description": "Post a fraction of maximum collateral capacity at day start.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialAllocation"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_collateral_midday",
      "description": "During the day, keep current collateral position unchanged."
    },
    "node_id": "SC1_initial_post",
    "description": "Post initial collateral at the very start of the day based on capacity."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_eod_collateral",
    "description": "Do not adjust collateral at end of tick; rely on strategic decisions only."
  }
}