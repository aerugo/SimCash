{
  "policy_id": "iter_003_incremental_tweak",
  "version": "2.0",
  "description": "Incremental optimization for iteration 3: slightly lower liquidity buffer and urgency threshold to reduce unnecessary conservatism while preserving 100% settlement.",
  "parameters": {
    "urgency_threshold": 3.25,
    "liquidity_buffer": 1.05,
    "initial_collateral_fraction": 0.23,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "compute": {
              "op": "-",
              "left": {
                "param": "urgency_threshold"
              },
              "right": {
                "value": 0.25
              }
            }
          }
        },
        {
          "op": ">=",
          "left": {
            "field": "is_eod_rush"
          },
          "right": {
            "value": 1.0
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent",
      "description": "Release urgent or EOD-rush payments immediately."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_with_buffer",
        "description": "Release when we have sufficient buffered liquidity."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_non_urgent",
        "description": "Hold non-urgent payments until they become urgent or liquidity improves."
      },
      "node_id": "P3_check_liquidity_with_buffer",
      "description": "For non-urgent payments, only release when effective liquidity comfortably covers amount using a slightly reduced buffer to trim cost."
    },
    "node_id": "P1_is_urgent_or_eod_rush",
    "description": "Prioritize urgent or end-of-day rush payments regardless of buffer to avoid any risk to settlement."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_no_bank_level_adjustment",
    "description": "Keep bank-level behavior neutral for now; payment-level rules drive behavior."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial_collateral",
      "description": "Post fixed fraction of max capacity as initial collateral.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialDayCollateral"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_collateral_midday",
      "description": "Do not actively adjust collateral intraday in this simple policy."
    },
    "node_id": "SC1_initial_collateral",
    "description": "Post a modest amount of collateral at start of day, otherwise hold."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_collateral_eod",
    "description": "Hold posted collateral at end of each tick; no dynamic end-of-day unwind yet."
  }
}