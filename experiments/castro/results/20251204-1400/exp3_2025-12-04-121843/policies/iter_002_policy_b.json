{
  "policy_id": "iter_002_incremental_liquidity_tuning",
  "version": "2.0",
  "description": "Incremental optimization from iteration 1: keep urgent-release logic, modestly tighten non-urgent liquidity buffer, and slightly reduce initial collateral posting to lower collateral/overdraft exposure while preserving 100% settlement.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.1,
    "initial_collateral_fraction": 0.2,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "param": "urgency_threshold"
          }
        },
        {
          "op": "and",
          "conditions": [
            {
              "op": "==",
              "left": {
                "field": "is_eod_rush"
              },
              "right": {
                "value": 1
              }
            },
            {
              "op": "<=",
              "left": {
                "field": "ticks_to_deadline"
              },
              "right": {
                "compute": {
                  "op": "+",
                  "left": {
                    "param": "urgency_threshold"
                  },
                  "right": {
                    "param": "eod_urgency_boost"
                  }
                }
              }
            }
          ]
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent_eod",
      "description": "Always release urgent or EOD-rush payments."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_with_buffer",
        "description": "Release when there is sufficient liquidity with buffer."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_low_liquidity",
        "description": "Hold non-urgent payments when liquidity is insufficient to reduce overdraft exposure."
      },
      "node_id": "P3_check_liquidity_buffer",
      "description": "For non-urgent payments, require effective_liquidity to cover amount times a buffer to limit overdraft risk."
    },
    "node_id": "P1_is_urgent_or_eod",
    "description": "Release when close to deadline or during EOD rush regardless of liquidity buffer to preserve 100% settlement."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial_fraction",
      "description": "Post a conservative initial fraction of total collateral capacity.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          },
          "reason": {
            "value": "InitialDayAllocation"
          }
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_otherwise",
      "description": "Do nothing with collateral mid-day in this simple iteration."
    },
    "node_id": "SC1_start_of_day",
    "description": "Post an initial fraction of max collateral at the very start of the day; otherwise hold."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_all_eod",
    "description": "Keep collateral stable at end of each tick for this iteration to avoid unnecessary churn costs."
  }
}