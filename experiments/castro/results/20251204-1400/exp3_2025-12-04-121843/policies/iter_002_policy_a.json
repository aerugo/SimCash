{
  "policy_id": "iter2_incremental_liquidity_and_urgency_tuning",
  "version": "2.0",
  "description": "Incremental refinement of baseline policy: slightly more conservative releases for non-urgent payments to reduce overdraft/collateral, with stronger push near deadlines and end-of-day. Keeps 100% settlement focus.",
  "parameters": {
    "urgency_threshold": 3.5,
    "liquidity_buffer": 1.1,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "is_past_deadline"
      },
      "right": {
        "value": 1.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_past_deadline",
      "description": "Force release for overdue payments."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": "<=",
        "left": {
          "field": "ticks_to_deadline"
        },
        "right": {
          "compute": {
            "op": "+",
            "left": {
              "param": "urgency_threshold"
            },
            "right": {
              "compute": {
                "op": "*",
                "left": {
                  "param": "eod_urgency_boost"
                },
                "right": {
                  "field": "is_eod_rush"
                }
              }
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_urgent",
        "description": "Release urgent payments regardless of liquidity buffer to avoid missing deadlines."
      },
      "on_false": {
        "type": "condition",
        "condition": {
          "op": ">=",
          "left": {
            "field": "effective_liquidity"
          },
          "right": {
            "compute": {
              "op": "*",
              "left": {
                "field": "remaining_amount"
              },
              "right": {
                "param": "liquidity_buffer"
              }
            }
          }
        },
        "on_true": {
          "type": "action",
          "action": "Release",
          "node_id": "P6_release_with_buffer",
          "description": "Release when there is sufficient liquidity buffer for non-urgent payments."
        },
        "on_false": {
          "type": "action",
          "action": "Hold",
          "node_id": "P7_hold_to_avoid_overdraft",
          "description": "Hold low-urgency payments when liquidity is tight to reduce overdraft/collateral usage."
        },
        "node_id": "P5_check_liquidity_buffer",
        "description": "For non-urgent payments, only release when effective liquidity comfortably covers remaining amount."
      },
      "node_id": "P3_is_very_urgent_or_eod_rush",
      "description": "Treat payments as urgent when close to deadline, especially in end-of-day rush."
    },
    "node_id": "P1_is_past_deadline",
    "description": "Always release if past deadline to avoid any overdue/EOD risk."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_no_bank_state_logic",
    "description": "No additional bank-level state logic for this simple scenario."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.5
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial_collateral",
      "description": "Post a fraction of maximum collateral capacity at the very start of the day.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialDayStartCollateral"
        }
      }
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">",
        "left": {
          "field": "queue1_liquidity_gap"
        },
        "right": {
          "value": 0.0
        }
      },
      "on_true": {
        "type": "action",
        "action": "PostCollateral",
        "node_id": "SC4_post_for_gap",
        "description": "Post additional collateral limited by remaining capacity to help cover the queue gap.",
        "parameters": {
          "amount": {
            "compute": {
              "op": "min",
              "values": [
                {
                  "field": "queue1_liquidity_gap"
                },
                {
                  "field": "remaining_collateral_capacity"
                }
              ]
            }
          },
          "reason": {
            "value": "CoverQueueGap"
          }
        }
      },
      "on_false": {
        "type": "action",
        "action": "HoldCollateral",
        "node_id": "SC5_hold_collateral",
        "description": "Do nothing on collateral when there is no liquidity gap."
      },
      "node_id": "SC3_check_queue_liquidity_gap",
      "description": "If there is a positive liquidity gap in the payment queue, consider posting more collateral, otherwise hold."
    },
    "node_id": "SC1_initial_and_gap_check",
    "description": "Post initial collateral at start of day and top up if there is a liquidity gap in the queue."
  }
}