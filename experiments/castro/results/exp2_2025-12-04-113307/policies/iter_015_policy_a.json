{
  "policy_id": "iter_015_targeted_tweak",
  "version": "2.0",
  "description": "Small incremental adjustment from iter 14: slightly lower liquidity_buffer and initial_collateral_fraction to trim overdraft/collateral without hurting 100% settlement.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 0.78,
    "initial_collateral_fraction": 0.26,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "param": "urgency_threshold"
          }
        },
        {
          "op": "==",
          "left": {
            "field": "is_eod_rush"
          },
          "right": {
            "value": 1.0
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent_eod",
      "description": "Always release urgent or EOD-rush payments."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_liquid",
        "description": "Release when we have enough liquidity including buffer."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_insufficient_liquidity",
        "description": "Hold when liquidity is insufficient and payment not yet urgent."
      },
      "node_id": "P3_check_liquidity_buffer",
      "description": "Release if effective_liquidity covers remaining_amount with buffer, else hold."
    },
    "node_id": "P1_is_urgent_or_eod",
    "description": "Release when close to deadline or in end-of-day rush, otherwise check liquidity buffer."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_noop",
    "description": "No bank-level state or budget management in this simple policy."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial_collateral",
      "description": "Post a fraction of maximum capacity as initial collateral.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialDayCollateral"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_collateral_intraday",
      "description": "Do not adjust collateral during the day; rely on initial post."
    },
    "node_id": "SC1_start_of_day",
    "description": "Post modest initial collateral at tick 0, otherwise hold collateral decisions intraday."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_eod_collateral",
    "description": "Keep any posted collateral until the system unwinds; no dynamic EOD adjustments."
  }
}