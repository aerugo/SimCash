{
  "policy_id": "iter_011_policy",
  "version": "2.0",
  "description": "Iteration 11: slightly lower liquidity buffer, symmetric parameters, simple urgency-first release rule and minimal collateral posting.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 0.9,
    "initial_collateral_fraction": 0.18,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "ticks_to_deadline"
      },
      "right": {
        "compute": {
          "op": "-",
          "left": {
            "compute": {
              "op": "+",
              "left": {
                "param": "urgency_threshold"
              },
              "right": {
                "param": "eod_urgency_boost"
              }
            }
          },
          "right": {
            "field": "is_eod_rush"
          }
        }
      }
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent",
      "description": "Always release urgent or EOD-rush payments."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_liquid",
        "description": "Non-urgent but well-funded payment can be released."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_wait",
        "description": "Hold when not urgent and liquidity is tight to avoid overdraft/collateral usage."
      },
      "node_id": "P3_check_liquidity",
      "description": "If not urgent, only release when effective liquidity comfortably covers amount using buffer."
    },
    "node_id": "P1_is_urgent",
    "description": "Release if payment is urgent (including extra EOD urgency boost)."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_noop_bank",
    "description": "No explicit intraday bank-level state management for this scenario."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial",
      "description": "Initial collateral posting based on configured fraction.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialDayAllocation"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_collateral_midday",
      "description": "Do not adjust collateral strategically after start of day."
    },
    "node_id": "SC1_initial_post",
    "description": "Post a modest fraction of max capacity at very start of day only."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_eod",
    "description": "Hold posted collateral at end of each tick to avoid churn costs."
  }
}