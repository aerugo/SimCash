{
  "policy_id": "iter_014_targeted_tune",
  "version": "2.0",
  "description": "Incremental improvement on iter 13: slightly higher liquidity buffer, same initial collateral, simple urgency-first payment rule, minimal collateral logic to avoid unnecessary costs while keeping 100% settlement.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.0,
    "initial_collateral_fraction": 0.2,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "or",
      "conditions": [
        {
          "op": "<=",
          "left": {
            "field": "ticks_to_deadline"
          },
          "right": {
            "param": "urgency_threshold"
          }
        },
        {
          "op": "==",
          "left": {
            "field": "is_past_deadline"
          },
          "right": {
            "value": 1.0
          }
        }
      ]
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent",
      "description": "Release if close to or past deadline to avoid any risk of non-settlement."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_safe_liquidity",
        "description": "Release when we have enough liquidity with buffer."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_insufficient_liquidity",
        "description": "Hold when not urgent and liquidity is insufficient."
      },
      "node_id": "P3_check_liquidity",
      "description": "For non-urgent payments, require effective liquidity to cover remaining amount with buffer."
    },
    "node_id": "P1_is_urgent",
    "description": "Always release urgent or overdue payments; otherwise release only if liquidity covers amount with buffer."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_noop_bank",
    "description": "No explicit intraday bank-level controls used in this iteration."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.5
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial_collateral",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialDayStartAllocation"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_intraday",
      "description": "Do not adjust collateral intraday to avoid churn costs."
    },
    "node_id": "SC1_opening_allocation",
    "description": "Post modest initial collateral only at very start of day; otherwise hold collateral steady."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EC1_hold_eod",
    "description": "Keep collateral position unchanged at end of tick/day for stability."
  }
}