{
  "policy_id": "bank_a_fixed_policy",
  "version": "2.0",
  "description": "Corrected, JSON-valid policy for Bank A using only allowed parameters and fields.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.0,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "ticks_to_deadline"
      },
      "right": {
        "param": "urgency_threshold"
      }
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent",
      "description": "Always release urgent payments to avoid deadline penalties.",
      "parameters": {}
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_liquid",
        "description": "Release when sufficiently funded.",
        "parameters": {}
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_insufficient_liquidity",
        "description": "Hold when liquidity is insufficient and payment is not yet urgent.",
        "parameters": {}
      },
      "node_id": "P3_has_liquidity",
      "description": "If there is enough effective liquidity relative to remaining_amount * liquidity_buffer, release; otherwise hold."
    },
    "node_id": "P1_is_urgent",
    "description": "Release payments that are urgent or past deadline; otherwise check liquidity vs amount."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_no_bank_level_action",
    "description": "No additional bank-level logic for now to keep policy simple and robust.",
    "parameters": {}
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial",
      "description": "Post a fixed fraction of max collateral capacity at tick 0.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialAllocation"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC3_hold_collateral_midday",
      "description": "Do nothing strategically with collateral after tick 0.",
      "parameters": {}
    },
    "node_id": "SC1_initial_post",
    "description": "Post an initial fraction of max collateral at the very start of the day; otherwise hold collateral strategically."
  },
  "end_of_tick_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "ticks_remaining_in_day"
      },
      "right": {
        "compute": {
          "op": "-",
          "left": {
            "param": "urgency_threshold"
          },
          "right": {
            "param": "eod_urgency_boost"
          }
        }
      }
    },
    "on_true": {
      "type": "condition",
      "condition": {
        "op": ">",
        "left": {
          "field": "queue1_liquidity_gap"
        },
        "right": {
          "value": 0.0
        }
      },
      "on_true": {
        "type": "action",
        "action": "PostCollateral",
        "node_id": "EC3_post_extra_for_gap",
        "description": "Post up to remaining collateral capacity to cover the gap, capped by the gap itself.",
        "parameters": {
          "amount": {
            "compute": {
              "op": "min",
              "values": [
                {
                  "field": "remaining_collateral_capacity"
                },
                {
                  "field": "queue1_liquidity_gap"
                }
              ]
            }
          },
          "reason": {
            "value": "CoverLiquidityGapEOD"
          }
        }
      },
      "on_false": {
        "type": "action",
        "action": "HoldCollateral",
        "node_id": "EC4_hold_no_gap",
        "description": "No gap or no capacity; hold collateral.",
        "parameters": {}
      },
      "node_id": "EC2_gap_and_capacity",
      "description": "Check if there is a positive queue liquidity gap and remaining collateral capacity."
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "EC5_hold_not_eod",
      "description": "Not near end of day; hold collateral.",
      "parameters": {}
    },
    "node_id": "EC1_eod_adjustment",
    "description": "Near end of day, if there is a liquidity gap and remaining capacity, post extra collateral; otherwise hold."
  }
}