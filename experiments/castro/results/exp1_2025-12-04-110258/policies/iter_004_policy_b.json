{
  "policy_id": "iter_004_targeted_tweak",
  "version": "2.0",
  "description": "Small parameter-only adjustment aimed at reducing overdraft-driven cost while maintaining 100% settlement. Keep structure; slightly tighten Bank B liquidity buffer and lower Bank A initial collateral fraction.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.1,
    "initial_collateral_fraction": 0.2,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "ticks_to_deadline"
      },
      "right": {
        "compute": {
          "op": "-",
          "left": {
            "param": "urgency_threshold"
          },
          "right": {
            "compute": {
              "op": "*",
              "left": {
                "param": "eod_urgency_boost"
              },
              "right": {
                "field": "is_eod_rush"
              }
            }
          }
        }
      }
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P_release_urgent",
      "description": "Always release urgent or EOD-boosted urgent payments."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P_release_liquid",
        "description": "Release when liquidity is sufficient versus buffered amount."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P_hold_insufficient",
        "description": "Hold when not urgent and liquidity is tight."
      },
      "node_id": "P_check_liquidity_buffer",
      "description": "For non-urgent payments, ensure effective liquidity covers amount times buffer."
    },
    "node_id": "P_root_check_urgent",
    "description": "Release if payment is urgent considering EOD boost, else check liquidity vs buffer."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B_noop",
    "description": "No explicit bank-level state or budget control in this simple policy."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC_post_initial",
      "description": "Post initial collateral based on configured fraction of max capacity.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialDayAllocation"
        }
      }
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "SC_hold_rest_of_day",
      "description": "Do not change collateral intraday in this simple policy."
    },
    "node_id": "SC_tick0_post_initial",
    "description": "Post a fraction of max collateral at start of day; otherwise hold current collateral."
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "action": "HoldCollateral",
    "node_id": "EOC_hold_all",
    "description": "At end of each tick, keep existing collateral to avoid extra churn cost."
  }
}