{
  "policy_id": "iter_010_policy",
  "version": "2.0",
  "description": "Slightly tighter liquidity usage to reduce overdraft/collateral while maintaining 100% settlement. Small buffer reduction and lower initial collateral.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 0.95,
    "initial_collateral_fraction": 0.2,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "ticks_to_deadline"
      },
      "right": {
        "compute": {
          "op": "-",
          "left": {
            "param": "urgency_threshold"
          },
          "right": {
            "compute": {
              "op": "*",
              "left": {
                "param": "eod_urgency_boost"
              },
              "right": {
                "field": "is_eod_rush"
              }
            }
          }
        }
      }
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_urgent_eod",
      "description": "Always release urgent or EOD-rush payments."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">=",
        "left": {
          "field": "effective_liquidity"
        },
        "right": {
          "compute": {
            "op": "*",
            "left": {
              "field": "remaining_amount"
            },
            "right": {
              "param": "liquidity_buffer"
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_liquid",
        "description": "Release when there is enough liquidity with buffer."
      },
      "on_false": {
        "type": "action",
        "action": "Hold",
        "node_id": "P5_hold_insufficient_liquidity",
        "description": "Hold to avoid overdraft or unnecessary collateral usage when liquidity is tight."
      },
      "node_id": "P3_check_liquidity_buffer",
      "description": "Release if effective liquidity comfortably covers remaining amount with small buffer."
    },
    "node_id": "P1_is_urgent_or_eod",
    "description": "Release if close to deadline or in end-of-day rush, otherwise check liquidity."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_no_bank_level_action",
    "description": "No explicit bank-level state logic used in this simple setup."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial",
      "description": "Post a fraction of max collateral capacity as initial buffer.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        },
        "reason": {
          "value": "InitialAllocation"
        }
      }
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">",
        "left": {
          "field": "queue1_liquidity_gap"
        },
        "right": {
          "value": 0.0
        }
      },
      "on_true": {
        "type": "action",
        "action": "PostCollateral",
        "node_id": "SC4_post_to_cover_gap",
        "description": "Post just enough collateral to close the current liquidity gap, within remaining capacity.",
        "parameters": {
          "amount": {
            "compute": {
              "op": "min",
              "values": [
                {
                  "field": "queue1_liquidity_gap"
                },
                {
                  "field": "remaining_collateral_capacity"
                }
              ]
            }
          },
          "reason": {
            "value": "CoverLiquidityGap"
          }
        }
      },
      "on_false": {
        "type": "action",
        "action": "HoldCollateral",
        "node_id": "SC5_hold_idle",
        "description": "No need for additional collateral when there is no liquidity gap."
      },
      "node_id": "SC3_post_if_gap",
      "description": "During the day, only post extra collateral if there is a positive queue liquidity gap."
    },
    "node_id": "SC1_initial_post",
    "description": "Post a moderate amount of collateral at the very start of the day; otherwise hold."
  },
  "end_of_tick_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "ticks_remaining_in_day"
      },
      "right": {
        "value": 1.0
      }
    },
    "on_true": {
      "type": "condition",
      "condition": {
        "op": ">",
        "left": {
          "field": "posted_collateral"
        },
        "right": {
          "field": "queue1_liquidity_gap"
        }
      },
      "on_true": {
        "type": "action",
        "action": "WithdrawCollateral",
        "node_id": "EC3_withdraw_excess",
        "description": "Withdraw the excess portion: posted_collateral - queue1_liquidity_gap (but not below zero).",
        "parameters": {
          "amount": {
            "compute": {
              "op": "max",
              "values": [
                {
                  "compute": {
                    "op": "-",
                    "left": {
                      "field": "posted_collateral"
                    },
                    "right": {
                      "field": "queue1_liquidity_gap"
                    }
                  }
                },
                {
                  "value": 0.0
                }
              ]
            }
          },
          "reason": {
            "value": "EODUnwindExcess"
          }
        }
      },
      "on_false": {
        "type": "action",
        "action": "HoldCollateral",
        "node_id": "EC4_hold_if_not_excess",
        "description": "Keep collateral if it is not clearly excess at end of day."
      },
      "node_id": "EC2_has_excess_collateral",
      "description": "If posted collateral exceeds current queue liquidity gap, withdraw the excess."
    },
    "on_false": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "EC5_hold_midday",
      "description": "During the day, keep collateral position unchanged by default."
    },
    "node_id": "EC1_end_of_day_unwind_check",
    "description": "Near end of day, withdraw any excess collateral not needed for queued payments."
  }
}