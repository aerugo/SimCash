{
  "policy_id": "bank_b_fixed_policy",
  "version": "2.0",
  "description": "Corrected Bank B policy with defined liquidity_buffer parameter and valid JSON structure.",
  "parameters": {
    "urgency_threshold": 3.0,
    "liquidity_buffer": 1.0,
    "initial_collateral_fraction": 0.25,
    "eod_urgency_boost": 2.0
  },
  "payment_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "is_past_deadline"
      },
      "right": {
        "value": 1.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "Release",
      "node_id": "P2_release_past_deadline",
      "description": "Release payments that have passed their deadline."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": "<=",
        "left": {
          "field": "ticks_to_deadline"
        },
        "right": {
          "compute": {
            "op": "-",
            "left": {
              "param": "urgency_threshold"
            },
            "right": {
              "compute": {
                "op": "*",
                "left": {
                  "param": "eod_urgency_boost"
                },
                "right": {
                  "field": "is_eod_rush"
                }
              }
            }
          }
        }
      },
      "on_true": {
        "type": "action",
        "action": "Release",
        "node_id": "P4_release_urgent",
        "description": "Release urgent payments even if liquidity is tight."
      },
      "on_false": {
        "type": "condition",
        "condition": {
          "op": ">=",
          "left": {
            "field": "effective_liquidity"
          },
          "right": {
            "compute": {
              "op": "*",
              "left": {
                "field": "remaining_amount"
              },
              "right": {
                "param": "liquidity_buffer"
              }
            }
          }
        },
        "on_true": {
          "type": "action",
          "action": "Release",
          "node_id": "P6_release_liquid",
          "description": "Release when there is enough liquidity with buffer."
        },
        "on_false": {
          "type": "action",
          "action": "Hold",
          "node_id": "P7_hold_insufficient_liquidity",
          "description": "Hold when not urgent and liquidity is insufficient."
        },
        "node_id": "P5_check_liquidity",
        "description": "Release when effective liquidity covers payment with buffer."
      },
      "node_id": "P3_is_urgent",
      "description": "Treat payments as urgent when close to deadline or during EOD rush."
    },
    "node_id": "P1_is_past_deadline",
    "description": "Always release if past deadline to avoid penalties."
  },
  "bank_tree": {
    "type": "action",
    "action": "NoAction",
    "node_id": "B1_noop",
    "description": "No bank-level state or release budget logic for now."
  },
  "strategic_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "==",
      "left": {
        "field": "current_tick"
      },
      "right": {
        "value": 0.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "PostCollateral",
      "node_id": "SC2_post_initial",
      "description": "Post a fraction of max collateral capacity at day start.",
      "parameters": {
        "amount": {
          "compute": {
            "op": "*",
            "left": {
              "field": "max_collateral_capacity"
            },
            "right": {
              "param": "initial_collateral_fraction"
            }
          }
        }
      }
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": ">",
        "left": {
          "field": "queue1_liquidity_gap"
        },
        "right": {
          "value": 0.0
        }
      },
      "on_true": {
        "type": "action",
        "action": "PostCollateral",
        "node_id": "SC4_post_for_gap",
        "parameters": {
          "amount": {
            "compute": {
              "op": "min",
              "values": [
                {
                  "field": "remaining_collateral_capacity"
                },
                {
                  "field": "queue1_liquidity_gap"
                }
              ]
            }
          }
        }
      },
      "on_false": {
        "type": "action",
        "action": "HoldCollateral",
        "node_id": "SC5_hold_collateral",
        "description": "Otherwise, keep collateral unchanged."
      },
      "node_id": "SC3_post_when_gap",
      "description": "If there is a liquidity gap in queue 1, and capacity remains, post more collateral."
    },
    "node_id": "SC1_start_of_day",
    "description": "Post initial collateral at start of day based on capacity."
  },
  "end_of_tick_collateral_tree": {
    "type": "condition",
    "condition": {
      "op": "<=",
      "left": {
        "field": "ticks_remaining_in_day"
      },
      "right": {
        "value": 10.0
      }
    },
    "on_true": {
      "type": "action",
      "action": "HoldCollateral",
      "node_id": "EC2_hold_near_eod",
      "description": "Hold collateral when near end of day."
    },
    "on_false": {
      "type": "condition",
      "condition": {
        "op": "<=",
        "left": {
          "field": "queue1_liquidity_gap"
        },
        "right": {
          "value": 0.0
        }
      },
      "on_true": {
        "type": "action",
        "action": "WithdrawCollateral",
        "node_id": "EC4_withdraw_some",
        "description": "Allow some collateral to be withdrawn when no gap; amount decided by simulator.",
        "parameters": {}
      },
      "on_false": {
        "type": "action",
        "action": "HoldCollateral",
        "node_id": "EC5_hold_default",
        "description": "Default: keep collateral if there is a gap."
      },
      "node_id": "EC3_excess_collateral_check",
      "description": "If far from EOD and there seems to be slack, allow collateral withdrawal."
    },
    "node_id": "EC1_near_end_of_day",
    "description": "Near end of day, keep collateral posted to avoid settlement risk."
  }
}