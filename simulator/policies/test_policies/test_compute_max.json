{
  "version": "1.0",
  "policy_id": "test_compute_max",
  "description": "Field validation test policy: Tests max operator in compute expressions. Releases when effective_liquidity >= max(remaining_amount, 500000) - minimum $5k threshold.",
  "payment_tree": {
    "type": "condition",
    "node_id": "TEST-N1-Max",
    "description": "Can agent afford maximum of payment or $5k floor?",
    "condition": {
      "op": ">=",
      "left": {
        "field": "effective_liquidity"
      },
      "right": {
        "compute": {
          "op": "max",
          "values": [
            {
              "field": "remaining_amount"
            },
            {
              "value": 500000.0
            }
          ]
        }
      }
    },
    "on_true": {
      "type": "action",
      "node_id": "TEST-A1-MaxRelease",
      "action": "Release"
    },
    "on_false": {
      "type": "action",
      "node_id": "TEST-A2-Hold",
      "action": "Hold",
      "parameters": {
        "reason": {
          "value": "BelowMaxThreshold"
        }
      }
    }
  },
  "strategic_collateral_tree": {
    "type": "action",
    "node_id": "TEST-SC1-NoAction",
    "action": "HoldCollateral"
  },
  "end_of_tick_collateral_tree": {
    "type": "action",
    "node_id": "TEST-EC1-NoAction",
    "action": "HoldCollateral"
  }
}
